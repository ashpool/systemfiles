function add_path {
  local dir=$1
  if [ -d $dir ]; then
    PATH="$dir:${PATH}"
  fi
}

add_path $HOME/bin
add_path /usr/local/bin
add_path /usr/local/sbin
add_path /opt/local/bin
add_path /opt/local/sbin
add_path ${HADOOP_HOME}/bin 
add_path ${PIG_HOME}/bin
add_path ${HIVE_HOME}/bin
add_path ${MYSQL_HOME}/bin
